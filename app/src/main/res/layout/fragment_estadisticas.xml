<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="16dp"
    android:background="#ffffff"
    android:padding="8dp"
    android:layout_marginTop="16dp"
    android:layout_marginBottom="16dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp">

    <!-- Título -->
    <TextView
        android:id="@+id/racha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        android:text="@string/racha_de_los_ltimos_partidos"
        android:textSize="18sp"
        android:textStyle="bold" />

    <!-- Tabla -->
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*">

        <!-- Fila 1 -->
        <TableRow>

            <TextView
                android:id="@+id/teams"
                style="@style/HeaderCellStyle"
                android:text="@string/equipos" />

            <TextView
                android:id="@+id/team1"
                style="@style/HeaderCellStyle"
                android:text="@string/barcelona" />

            <TextView
                android:id="@+id/team2"
                style="@style/HeaderCellStyle"
                android:text="@string/madrid" />
        </TableRow>

        <!-- Fila 2 -->
        <TableRow>

            <TextView
                android:id="@+id/victorias"
                style="@style/CellStyle"
                android:text="@string/n_mero_de_victorias" />

            <TextView
                android:id="@+id/nvictorias1"
                style="@style/CellStyle"
                android:text="@string/_2" />

            <TextView
                android:id="@+id/nvictorias2"
                style="@style/CellStyle"
                android:text="@string/_3" />
        </TableRow>

        <!-- Fila 3 -->
        <TableRow>

            <TextView
                android:id="@+id/empates"
                style="@style/CellStyle"
                android:text="@string/n_mero_de_empates" />

            <TextView
                android:id="@+id/nempates1"
                style="@style/CellStyle"
                android:text="@string/_2" />

            <TextView
                android:id="@+id/nempates2"
                style="@style/CellStyle"
                android:text="@string/_3" />
        </TableRow>

        <!-- Fila 4 -->
        <TableRow>

            <TextView
                android:id="@+id/derrotas"
                style="@style/CellStyle"
                android:text="@string/n_mero_de_derrotas" />

            <TextView
                android:id="@+id/nderrotas1"
                style="@style/CellStyle"
                android:text="@string/_2" />

            <TextView
                android:id="@+id/nderrotas2"
                style="@style/CellStyle"
                android:text="@string/_3" />
        </TableRow>

    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Estadísticas de Fútbol -->
        <TextView
            android:id="@+id/stats_match"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/estad_sticas_del_partido"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- Goleadores -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <TextView
                android:id="@+id/goles"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/goles"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/valorGoles"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:text="@string/_10"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Tiros a Gol -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/tiros"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/tiros_a_gol"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/valorTiros"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:text="@string/_15"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Posesión -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/posesion"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/posesi_n"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/valorPosesion"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:text="@string/_60"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Otros estadísticas pueden ir aquí -->

    </LinearLayout>
</LinearLayout>
