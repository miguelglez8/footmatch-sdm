<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dataNacimientoJugador"
        app:layout_constraintVertical_bias="1.0"
        android:layout_marginTop="12dp"/>

    <TextView
        android:id="@+id/dataJugador"
        android:layout_width="247dp"
        android:layout_height="23dp"
        android:layout_marginEnd="4dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.285"
        app:layout_constraintStart_toEndOf="@+id/infoNombreJugador"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.024"
        android:layout_marginTop="12dp"/>

    <TextView
        android:id="@+id/dataPosicionJugador"
        android:layout_width="246dp"
        android:layout_height="24dp"
        android:layout_marginEnd="4dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.285"
        app:layout_constraintStart_toEndOf="@+id/infoPosicionJugador"
        app:layout_constraintTop_toBottomOf="@+id/dataJugador"
        app:layout_constraintVertical_bias="0.016"
        android:layout_marginTop="12dp"/>

    <TextView
        android:id="@+id/dataNacionalidadJugador"
        android:layout_width="246dp"
        android:layout_height="24dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="4dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintStart_toEndOf="@+id/infoNacionalidadJugador"
        app:layout_constraintTop_toBottomOf="@+id/dataPosicionJugador"
        app:layout_constraintVertical_bias="0.095" />

    <TextView
        android:id="@+id/dataNacimientoJugador"
        android:layout_width="244dp"
        android:layout_height="23dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="4dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.28"
        app:layout_constraintStart_toEndOf="@+id/infoNacimientoJugador"
        app:layout_constraintTop_toBottomOf="@+id/dataNacionalidadJugador"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/infoNombreJugador"
        android:layout_width="115dp"
        android:layout_height="24dp"
        android:text="Nombre:"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.052"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.022"
        android:layout_marginTop="12dp"/>

    <TextView
        android:id="@+id/infoPosicionJugador"
        android:layout_width="112dp"
        android:layout_height="25dp"
        android:text="Posicion:"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.052"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/infoNombreJugador"
        app:layout_constraintVertical_bias="0.016"
        android:layout_marginTop="12dp"/>

    <TextView
        android:id="@+id/infoNacionalidadJugador"
        android:layout_width="116dp"
        android:layout_height="25dp"
        android:text="Nacionalidad:"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.052"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/infoPosicionJugador"
        app:layout_constraintVertical_bias="0.018"
        android:layout_marginTop="12dp"/>

    <TextView
        android:id="@+id/infoNacimientoJugador"
        android:layout_width="116dp"
        android:layout_height="25dp"
        android:text="Nacimiento:"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.047"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/infoNacionalidadJugador"
        app:layout_constraintVertical_bias="0.021"
        android:layout_marginTop="12dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>