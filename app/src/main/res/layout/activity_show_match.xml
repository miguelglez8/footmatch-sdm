<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:fitsSystemWindows="true"
        android:theme="@style/AppTheme.AppBarOverlay"
        tools:ignore="MissingConstraints">

        <!-- Agregar un RelativeLayout para colocar la ImageView en la esquina superior izquierda -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imagenLiga"
                android:layout_width="93dp"
                android:layout_height="63dp"
                android:layout_marginStart="0dp"
                android:src="@drawable/liga_easports" />

            <TextView
                android:id="@+id/liga_jornada"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="22dp"
                android:text="@string/liga_ea_sports_jornada_10" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <!-- Equipo 1 -->
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp">

                <ImageView
                    android:id="@+id/imagenEquipo1"
                    android:layout_width="53dp"
                    android:layout_height="28dp"
                    android:src="@drawable/logo_barcelona" />

                <TextView
                    android:id="@+id/nombreEquipo1"
                    android:layout_width="wrap_content"
                    android:layout_height="22dp"
                    android:layout_below="@id/imagenEquipo1"
                    android:text="@string/barcelona" />

            </RelativeLayout>

            <!-- Resultado y Fecha -->
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp">

                <TextView
                    android:id="@+id/resultadoPartido"
                    android:layout_width="wrap_content"
                    android:layout_height="22dp"
                    android:layout_marginStart="26dp"
                    android:text="@string/resultado" />

                <TextView
                    android:id="@+id/fechaPartido"
                    android:layout_width="wrap_content"
                    android:layout_height="22dp"
                    android:layout_below="@id/resultadoPartido"
                    android:text="@string/fecha" />

            </RelativeLayout>

            <!-- Equipo 2 -->
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp">

                <ImageView
                    android:id="@+id/imagenEquipo2"
                    android:layout_width="53dp"
                    android:layout_height="29dp"
                    android:src="@drawable/logo_madrid" />

                <TextView
                    android:id="@+id/nombreEquipo2"
                    android:layout_width="wrap_content"
                    android:layout_height="22dp"
                    android:layout_below="@id/imagenEquipo2"
                    android:text="@string/madrid" />

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/estadio"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="@string/camp_nou" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/estadoPartido"
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:text="@string/finalizado" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayoutMinutos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/minutoPartido"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:text="@string/_90" />

        </LinearLayout>


        <!-- Otros elementos del AppBarLayout -->

    </com.google.android.material.appbar.AppBarLayout>

    <include
        layout="@layout/content_scrollingbotonera"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_marginTop="16dp" />

</LinearLayout>
