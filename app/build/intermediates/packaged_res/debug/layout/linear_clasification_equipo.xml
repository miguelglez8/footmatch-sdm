<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:baselineAligned="false">

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tableLayout">

        <!-- Datos de la ClasificaciÃ³n -->
        <!-- Puedes repetir este bloque para cada equipo -->
        <TableRow
            android:id="@+id/tuTableRow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="3dp"
            android:paddingRight="3dp">

            <TextView
                android:id="@+id/posClasificacion"
                style="@style/CellStyle2"
                android:layout_width="0dp"
                android:autoSizeTextType="uniform"
                android:layout_weight="1.3"
                android:textColor="#000000"
                android:textStyle="bold"
                android:autoSizeMinTextSize="6sp"
                android:autoSizeMaxTextSize="9sp"
                android:background="@drawable/cell_border" />

            <!-- ImageView para el equipo -->
            <ImageView
                android:id="@+id/logoEquipo"
                style="@style/CellStyle3"
                android:layout_width="0dp"
                android:gravity="center"
                android:autoSizeTextType="uniform"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_height="match_parent"
                android:layout_weight="1.9"
                android:background="@drawable/cell_border"
                android:contentDescription="Logo del equipo" />

            <TextView
                android:id="@+id/partidosGanados"
                style="@style/CellStyle2"
                android:layout_width="0dp"
                android:autoSizeTextType="uniform"
                android:layout_weight="1"
                android:autoSizeMinTextSize="6sp"
                android:autoSizeMaxTextSize="9sp"
                android:background="@drawable/cell_border" />

            <TextView
                android:id="@+id/partidosEmpatados"
                style="@style/CellStyle2"
                android:layout_width="0dp"
                android:autoSizeTextType="uniform"
                android:layout_weight="1"
                android:autoSizeMinTextSize="6sp"
                android:autoSizeMaxTextSize="9sp"
                android:background="@drawable/cell_border" />

            <TextView
                android:id="@+id/partidosPerdidos"
                style="@style/CellStyle2"
                android:layout_width="0dp"
                android:autoSizeTextType="uniform"
                android:layout_weight="1"
                android:autoSizeMinTextSize="6sp"
                android:autoSizeMaxTextSize="9sp"
                android:background="@drawable/cell_border" />

            <TextView
                android:id="@+id/golesFavor"
                style="@style/CellStyle2"
                android:layout_width="0dp"
                android:autoSizeTextType="uniform"
                android:layout_weight="1"
                android:autoSizeMinTextSize="6sp"
                android:autoSizeMaxTextSize="9sp"
                android:background="@drawable/cell_border" />

            <TextView
                android:id="@+id/golesContra"
                style="@style/CellStyle2"
                android:layout_width="0dp"
                android:autoSizeTextType="uniform"
                android:layout_weight="1"
                android:autoSizeMinTextSize="6sp"
                android:autoSizeMaxTextSize="9sp"
                android:background="@drawable/cell_border" />

            <TextView
                android:id="@+id/diferenciaGoles"
                style="@style/CellStyle2"
                android:layout_width="0dp"
                android:autoSizeTextType="uniform"
                android:layout_weight="1"
                android:autoSizeMinTextSize="6sp"
                android:autoSizeMaxTextSize="9sp"
                android:background="@drawable/cell_border" />

            <TextView
                android:id="@+id/puntosEquipo"
                style="@style/CellStyle2"
                android:layout_width="0dp"
                android:autoSizeTextType="uniform"
                android:layout_weight="1"
                android:autoSizeMinTextSize="6sp"
                android:autoSizeMaxTextSize="9sp"
                android:background="@drawable/cell_border" />
        </TableRow>
    </TableLayout>


</TableLayout>