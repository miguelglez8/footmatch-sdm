<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- Separador horizontal -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000"
        android:layout_marginTop="5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">
        <!-- Layout para la informaciÃ³n del equipo -->
        <ImageView
            android:id="@+id/newImageView"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="1dp"
            android:layout_weight="0.4"
            android:src="@drawable/ic_launcher_foreground" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.3"
            android:orientation="vertical">

            <!-- Fila superior con el nombre del jugador -->

            <!-- Fila inferior con la imagen del equipo y el nombre del equipo -->
            <TextView
                android:id="@+id/playerNameTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:textColor="#333"
                android:textSize="16sp"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Imagen del equipo -->
                <ImageView
                    android:id="@+id/teamLogoImageView"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1" />

                <!-- Nombre del equipo -->
                <TextView
                    android:id="@+id/teamNameTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:gravity="left"
                    android:textColor="#333"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Columna a la derecha ocupando 2/5 de la pantalla -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:layout_weight="1.8"
            android:orientation="vertical">

            <!-- Textview para los goles -->
            <TextView
                android:id="@+id/goalsCountTextView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="right"
                android:textColor="#333"
                android:textSize="14sp"
                android:textStyle="bold" />

            <!-- Textview para los partidos jugados -->
            <TextView
                android:id="@+id/matchesPlayedTextView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="right"
                android:textColor="#333"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>
