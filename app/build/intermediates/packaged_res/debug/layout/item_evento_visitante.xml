<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="16dp">

    <!-- Parte izquierda -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/primer_factor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="300dp"
            android:text="@string/mbapp"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/segundo_factor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="300dp"
            android:layout_marginTop="8dp"
            android:text="@string/di_mar_a"
            android:textSize="18sp" />

        <!-- Iconos (puedes reemplazar con tus propias imágenes) -->
        <ImageView
            android:id="@+id/icono1"
            android:layout_width="36dp"
            android:layout_height="27dp"
            android:layout_marginStart="240dp"
            android:layout_marginTop="-57dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/icono_balonde_futbol" />

        <ImageView
            android:id="@+id/icono2"
            android:layout_width="43dp"
            android:layout_height="34dp"
            android:layout_marginStart="240dp"
            android:layout_marginTop="-6dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/icono_bota" />

        <TextView
            android:id="@+id/minuto_evento"
            android:layout_width="39dp"
            android:layout_height="41dp"
            android:layout_marginStart="180dp"
            android:layout_marginTop="-60dp"
            android:text="@string/_6"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- Parte derecha con iconos e indicador de tiempo -->
    <!-- Puedes añadir elementos en esta parte si es necesario -->

</LinearLayout>
