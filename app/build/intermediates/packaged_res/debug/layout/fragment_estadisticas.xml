<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#ffffff"
    android:padding="8dp"
    android:layout_marginTop="16dp"
    android:layout_marginBottom="16dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_margin="@dimen/text_margin">

<!-- TÃ­tulo -->
    <TextView
        android:id="@+id/racha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        android:text="@string/racha_de_los_ltimos_partidos"
        android:textSize="18sp"
        android:textStyle="bold" />

    <!-- Tabla -->
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*">

        <!-- Fila 1 -->
        <TableRow>

            <TextView
                android:id="@+id/teams"
                style="@style/HeaderCellStyle"
                android:text="@string/equipos" />

            <TextView
                android:id="@+id/team1"
                style="@style/HeaderCellStyle"
                android:text="@string/barcelona" />

            <TextView
                android:id="@+id/team2"
                style="@style/HeaderCellStyle"
                android:text="@string/madrid" />
        </TableRow>

        <!-- Fila 2 -->
        <TableRow>

            <TextView
                android:id="@+id/victorias"
                style="@style/CellStyle"
                android:text="@string/n_mero_de_victorias" />

            <TextView
                android:id="@+id/nvictorias1"
                style="@style/CellStyle"
                android:text="2" />

            <TextView
                android:id="@+id/nvictorias2"
                style="@style/CellStyle"
                android:text="2" />
        </TableRow>

        <!-- Fila 3 -->
        <TableRow>

            <TextView
                android:id="@+id/empates"
                style="@style/CellStyle"
                android:text="@string/n_mero_de_empates" />

            <TextView
                android:id="@+id/nempates1"
                style="@style/CellStyle"
                android:text="2" />

            <TextView
                android:id="@+id/nempates2"
                style="@style/CellStyle"
                android:text="3" />
        </TableRow>

        <!-- Fila 4 -->
        <TableRow>

            <TextView
                android:id="@+id/derrotas"
                style="@style/CellStyle"
                android:text="@string/n_mero_de_derrotas" />

            <TextView
                android:id="@+id/nderrotas1"
                style="@style/CellStyle"
                android:text="2" />

            <TextView
                android:id="@+id/nderrotas2"
                style="@style/CellStyle"
                android:text="3" />
        </TableRow>

    </TableLayout>
</LinearLayout>
</ScrollView>
