<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
        android:orientation="vertical"
    android:background="#ffffff"
    android:padding="8dp"
    android:layout_marginTop="16dp"
    android:layout_marginBottom="16dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_margin="@dimen/text_margin">

        <TextView
            android:id="@+id/racha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:text="@string/racha_de_los_ltimos_partidos"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*">

        <!-- Fila 1 -->
        <TableRow
            android:background="@color/table_row_background">

            <TextView
                android:id="@+id/teams"
                style="@style/HeaderCellStyle"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:autoSizeMaxTextSize="14sp"
                android:autoSizeMinTextSize="8sp"
                android:autoSizeTextType="uniform"
                android:gravity="center"
                android:text="@string/equipos"
                android:textSize="12sp"
                android:layout_gravity="center"
                android:ellipsize="end"
                />

            <TextView
                android:id="@+id/team1"
                style="@style/HeaderCellStyle"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:autoSizeMaxTextSize="14sp"
                android:autoSizeMinTextSize="8sp"
                android:autoSizeTextType="uniform"
                android:gravity="center"
                android:textSize="12sp"
                android:ellipsize="end"
                android:layout_gravity="center"
                 />

            <TextView
                android:id="@+id/team2"
                style="@style/HeaderCellStyle"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:autoSizeMaxTextSize="14sp"
                android:autoSizeMinTextSize="8sp"
                android:autoSizeTextType="uniform"
                android:gravity="center"
                android:layout_gravity="center"
                android:textSize="12sp"
                android:ellipsize="end" />
        </TableRow>


        <!-- Resto de las filas... -->

        <!-- Fila 2 -->
        <!-- Fila de victorias -->
        <TableRow>

            <TextView
                android:id="@+id/victorias"
                style="@style/CellStyle"
                android:text="@string/n_mero_de_victorias"
                android:layout_width="0dp"
                android:textSize="14sp"
                android:layout_weight="1"
                android:layout_gravity="center"
                />

            <TextView
                android:id="@+id/nvictorias1"
                style="@style/CellStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="12sp"
                android:layout_weight="1"
                android:layout_gravity="center"
                 />

            <TextView
                android:id="@+id/nvictorias2"
                style="@style/CellStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="12sp"
                android:layout_gravity="center"
                 />
        </TableRow>


        <!-- Fila 3 -->
        <TableRow>

            <TextView
                android:id="@+id/empates"
                style="@style/CellStyle"
                android:text="@string/n_mero_de_empates"
                android:layout_width="0dp"
                android:textSize="14sp"
                android:layout_weight="1"
                android:layout_gravity="center"
                />

            <TextView
                android:id="@+id/nempates1"
                style="@style/CellStyle"
                android:layout_width="0dp"
                android:textSize="12sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center"
                 />

            <TextView
                android:id="@+id/nempates2"
                style="@style/CellStyle"
                android:layout_width="0dp"
                android:textSize="12sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center"
                />
        </TableRow>

        <!-- Fila 4 -->
        <TableRow>

            <TextView
                android:id="@+id/derrotas"
                style="@style/CellStyle"
                android:text="@string/n_mero_de_derrotas"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="14sp"
                android:layout_gravity="center"
                />

            <TextView
                android:id="@+id/nderrotas1"
                style="@style/CellStyle"
                android:layout_width="0dp"
                android:textSize="12sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center"
                />

            <TextView
                android:id="@+id/nderrotas2"
                style="@style/CellStyle"
                android:layout_width="0dp"
                android:textSize="12sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center"
                />
        </TableRow>

    </TableLayout>
</LinearLayout>
</ScrollView>
